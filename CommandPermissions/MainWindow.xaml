<Window x:Class="CommandPermissions.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CommandPermissions"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button Content="Button" HorizontalAlignment="Left" Margin="92,181,0,0" VerticalAlignment="Top" Width="75" Command="{Binding Command1}"/>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="198,181,0,0" TextWrapping="Wrap" Text="{Binding Text1, Mode=TwoWay}" VerticalAlignment="Top" Width="404"/>
        <Button Content="Button2" HorizontalAlignment="Left" Margin="92,223,0,0" VerticalAlignment="Top" Width="75" Command="{Binding Command2}"/>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="198,223,0,0" TextWrapping="Wrap" Text="{Binding Text2, Mode=TwoWay}" VerticalAlignment="Top" Width="404"/>

    </Grid>
</Window>
